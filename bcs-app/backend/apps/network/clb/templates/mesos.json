{
    "apiVersion": "v4",
    "kind": "deployment",
    "restartPolicy": {
        "policy": "OnFailure"
    },
    "metadata": {
        "labels": {
            "app": "{{resource_name}}"
        },
        "name": "{{resource_name}}",
        "namespace": "{{namespace}}"
    },
    "spec": {
        "instance": 1,
        "strategy": {
            "type": "RollingUpdate",
            "rollingupdate": {
                "maxUnavilable": 1,
                "maxSurge": 1,
                "upgradeDuration": 50,
                "rollingOrder": "DeleteFirst",
                "rollingManually":false
            }
        },
        "template": {
            "metadata": {
                "name": "{{resource_name}}",
                "namespace": "{{namespace}}",
                "labels": {
                    "app": "{{resource_name}}"
                }
            },
            "spec": {
                "containers": [
                    {
                        "image": "{{clb_nginx_image_url}}",
                        "imagePullPolicy": "IfNotPresent",
                        "resources": {
                            "limits": {
                                "cpu": "0.5",
                                "memory": "512"
                            }
                        },
                        "configmaps": [
                            {
                                "name": "nginx-configmap",
                                "items": [
                                    {
                                        "type": "file",
                                        "dataKey": "nginx-conf",
                                        "KeyOrPath": "/etc/nginx/nginx.conf",
                                        "readOnly": false,
                                        "user": "root"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "image": "{{clb_controller_image_url}}",
                        "imagePullPolicy": "Always",
                        "command": "/clb/clb-controller",
                        "args": [
                            "server",
                            "--port",
                            "{{metric_port}}",
                            "--serviceRegistry",
                            "{{svc_discovery_type}}",
                            "--kubeconfig",
                            "/clb/kubeconfig",
                            "--backendIPType",
                            "{{network_type}}",
                            "--netType",
                            "{{clb_type}}",
                            "--clbname",
                            "{{clb_name}}",
                            "--v",
                            "3",
                            "--alsologtostderr"
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "1",
                                "memory": "1024"
                            }
                        },
                        "env": [
                            {
                                "name": "BCS_CLB_IMPLEMENT",
                                "value": "{{implement_type}}"
                            },
                            {
                                "name": "BCS_CLB_BACKENDMODE",
                                "value": "{{backend_type}}"
                            },
                            {
                                "name": "BCS_CLB_REGION",
                                "value": "{{region}}"
                            },
                            {
                                "name": "BCS_CLB_PROJECTID",
                                "value": "{{clb_project_id}}"
                            },
                            {
                                "name": "BCS_CLB_VPCID",
                                "value": "{{vpc_id}}"
                            },
                            {
                                "name": "BCS_CLB_SUBNET",
                                "value": "0"
                            },
                            {
                                "name": "BCS_CLB_WAIT_PERIOD_DEALING",
                                "value": "1"
                            }
                        ],
                        "ports": [
                            {
                                "name": "http-metric",
                                "containerPort": {{metric_port}}
                            }
                        ],
                        "secrets": [
                            {
                                "secretName": "clb-controller-secret",
                                "items": [
                                    {
                                        "type": "env",
                                        "dataKey": "clb-controller-secretid",
                                        "keyOrPath": "BCS_CLB_SECRETID"
                                    },
                                    {
                                        "type": "env",
                                        "dataKey": "clb-controller-secretkey",
                                        "keyOrPath": "BCS_CLB_SECRETKEY"
                                    },
                                    {
                                        "type": "file",
                                        "dataKey": "clb-controller-kubeconfig",
                                        "keyOrPath": "/clb/kubeconfig"
                                    }
                                ]
                            }
                        ]
                    }
                ],
                "networkMode": "bcs-qcloud",
                "networkType": "cni"
            }
        }
    }
}
